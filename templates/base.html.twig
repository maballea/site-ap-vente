<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Bienvenue sur notre site{% endblock %}</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    {% block stylesheets %}{% endblock %}
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            <a class="navbar-brand" href="{{ path('app_user') }}">
                <img src="/images/logo.png" alt="Logo" style="width: 40px; height: 40px;">
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    {% if app.user %}
                        {% if is_granted('ROLE_ADMIN') %}
                            <!-- Admin -->
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('admin_dashboard') }}">Tableau de bord</a>
                            </li>
                        {% endif %}
                        
                        <!-- Client -->
                        {% if is_granted('ROLE_CLIENT') %}
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('panier') }}">Panier</a>
                            </li>
                        {% endif %}
                        
                        <!-- Déconnexion -->
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_logout') }}">Déconnexion</a>
                        </li>

                    {% else %}
                        <!-- Non connecté -->
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('produit_catalogue') }}">Catalogue</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_register') }}">S'inscrire</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_login') }}">Se connecter</a>
                        </li>
                    {% endif %}
                    
                    <!-- Panier pour tout le monde -->
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('panier') }}">
                            Panier
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Contenu principal -->
    <div class="container mt-4">
        {% block body %}{% endblock %}
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    {% block javascripts %}{% endblock %}
</body>
</html>

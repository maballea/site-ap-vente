{% extends 'base.html.twig' %}

{% block title %}Commandes{% endblock %}

{% block body %}
    <div class="container mt-5">
        {% if is_granted('ROLE_ADMIN') %}
            <h1 class="text-center mb-4 text-primary">Commandes</h1>
        {% else %}
            <h1 class="text-center mb-4 text-primary">Commandes</h1>
        {% endif %}


        {% if commandes is empty %}
            <div class="alert alert-info text-center">
                Vous n'avez pas encore passé de commande.
            </div>
        {% else %}
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            {% if is_granted('ROLE_ADMIN') %}
                                <th>ID</th>
                            {% endif %}
                            <th>Date</th>
                            <th>Total</th>
                            <th>État</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for commande in commandes %}
                            <tr>
                                {% if is_granted('ROLE_ADMIN') %}
                                    <td>{{ commande.id }}</td>
                                {% endif %}
                                <td>{{ commande.dateCommande|date('d/m/Y H:i') }}</td>
                                <td>{{ commande.totalCommande }} €</td>
                                <td>
                                    <span class="badge 
                                        {% if commande.etatCommande == 'En attente de validation' %}
                                            bg-warning
                                        {% elseif commande.etatCommande == 'Validée' %}
                                            bg-success
                                        {% else %}
                                            bg-secondary
                                        {% endif %}
                                    ">
                                        {{ commande.etatCommande }}
                                    </span>
                                </td>
                                <td>
                                    <a href="{{ path('app_commande_details', {id: commande.id}) }}" class="btn btn-info btn-sm">Voir les détails</a>
                                    
                                    {% if is_granted('ROLE_CLIENT') and commande.user == app.user %}
                                        <form action="{{ path('commande_supprimer', { id: commande.id }) }}" method="post" style="display:inline;">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ commande.id) }}">
                                            <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Êtes-vous sûr de vouloir annuler cette commande ?')">Annuler</button>
                                        </form>
                                    {% endif %}

                                    {% if is_granted('ROLE_ADMIN') %}
                                        <form action="{{ path('commande_modifier', { id: commande.id }) }}" method="post" style="display:inline;">
                                            <input type="hidden" name="_token" value="{{ csrf_token('commande_modifier_' ~ commande.id) }}">
                                            <button type="submit" class="btn btn-primary btn-sm">
                                                {% if commande.etatCommande == 'En attente de validation' %}
                                                    Valider
                                                {% else %}
                                                    Revenir à "En attente"
                                                {% endif %}
                                            </button>
                                        </form>
                                    {% endif %}
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>

            {% if is_granted('ROLE_CLIENT') %}
                <div class="mt-4 text-center">
                    <a href="{{ path('client_acceuil') }}" class="btn btn-secondary btn-lg me-2">
                        <i class="bi bi-house-door"></i> Accueil </a>
                    {% if not is_granted('ROLE_ADMIN') %}
                    <a href="{{ path('panier') }}" class="btn btn-secondary btn-lg">
                        <i class="bi bi-cart"></i> Voir le Panier
                    </a>
                    {% endif %}

                </div>
            {% endif %}
        {% endif %}
    </div>

    <!-- Ajout de Bootstrap Icons via CDN pour les icônes -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css"></script>
{% endblock %}

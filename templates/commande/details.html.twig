{% extends 'base.html.twig' %}

{% block title %}Détails de la Commande{% endblock %}

{% block body %}
    <div class="container mt-5">
        <!-- Titre de la page -->
        <h1 class="text-center mb-4 text-primary">Détails de la Commande</h1>

        <!-- Détails de la commande -->
        <div class="card shadow-sm p-4 mb-4">
            <p><strong>Date :</strong> {{ commande.dateCommande|date('d/m/Y H:i') }}</p>
            <p><strong>Total :</strong> {{ commande.totalCommande }} €</p>
            <p><strong>État :</strong> {{ commande.etatCommande }}</p>
        </div>

        <!-- Liste des produits de la commande -->
        <h2 class="text-center mb-4">Produits Commandés</h2>
        <ul class="list-group mb-4">
            {% for details in commande.detailsCommandes %}
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    {{ details.produit.nom }} - {{ details.quantite }} x {{ details.prixUnitaire }} €
                    <span class="badge bg-primary rounded-pill">{{ details.quantite * details.prixUnitaire }} €</span>
                </li>
            {% endfor %}
        </ul>

        <!-- Lien retour à la liste des commandes -->
        <div class="text-center">
            <a href="{{ path('commande') }}" class="btn btn-secondary btn-lg">
                <i class="bi bi-arrow-left-circle"></i> Retour à la liste des commandes
            </a>
        </div>
    </div>

    <!-- Ajout de Bootstrap JS via CDN pour les composants interactifs -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Créer un produit{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">
                <h1 class="h5 mb-0">Créer un nouveau produit</h1>
            </div>
            <div class="card-body">
                {{ form_start(form) }}
                    <div class="row mb-3">
                        <div class="col-md-6">
                            {{ form_row(form.nom, {
                                'label': 'Nom du produit',
                                'attr': {'class': 'form-control'}
                            }) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_row(form.prix, {
                                'label': 'Prix (€)',
                                'attr': {'class': 'form-control'}
                            }) }}
                        </div>
                    </div>
                    <div class="mb-3">
                        {{ form_row(form.description, {
                            'label': 'Description',
                            'attr': {'class': 'form-control', 'rows': 4}
                        }) }}
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-6">
                            {{ form_row(form.stock, {
                                'label': 'Stock disponible',
                                'attr': {'class': 'form-control'}
                            }) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_row(form.categorie, {
                                'label': 'Catégorie',
                                'attr': {'class': 'form-select'}
                            }) }}
                        </div>
                    </div>
                    <div class="text-end">
                        <button type="submit" class="btn btn-success">Créer</button>
                        <a href="{{ path('produit_catalogue') }}" class="btn btn-secondary">Retour au catalogue</a>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}

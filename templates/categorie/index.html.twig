{% extends 'base.html.twig' %}

{% block title %}Gestion des catégories{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="text-center mb-4 text-primary">Gestion des Catégories</h1>

    <!-- Tableau des catégories -->
    <div class="card shadow-sm p-4 mb-4">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Id</th>
                    <th>Nom</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for categorie in categories %}
                <tr>
                    <td>{{ categorie.id }}</td>
                    <td>{{ categorie.nom }}</td>
                    <td>
                        <!-- Bouton Modifier -->
                        <a href="{{ path('categorie_edit', {'id': categorie.id}) }}" class="btn btn-warning btn-sm me-2">
                            <i class="bi bi-pencil"></i> Modifier
                        </a>
                        
                        {% if not categorie.hasProducts %}
                            <!-- Formulaire de suppression -->
                            <form method="post" action="{{ path('categorie_delete', {'id': categorie.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette catégorie ?');" class="d-inline">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ categorie.id) }}">
                                <button class="btn btn-danger btn-sm">
                                    <i class="bi bi-trash"></i> Supprimer
                                </button>
                            </form>
                        {% else %}
                            <!-- Message d'avertissement -->
                            <div class="alert alert-warning mb-0">
                                Cette catégorie contient des produits, vous ne pouvez pas la supprimer.
                            </div>
                        {% endif %}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3" class="text-center">Aucune catégorie trouvée</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

    <!-- Boutons pour ajouter une catégorie et revenir au catalogue -->
    <div class="d-flex justify-content-between mt-4">
        <a href="{{ path('categorie_new') }}" class="btn btn-success btn-lg">
            <i class="bi bi-plus-circle"></i> Ajouter une catégorie
        </a>
        <a href="{{ path('produit_catalogue') }}" class="btn btn-secondary btn-lg">
            <i class="bi bi-arrow-left-circle"></i> Retour au Catalogue
        </a>
    </div>
</div>
{% endblock %}

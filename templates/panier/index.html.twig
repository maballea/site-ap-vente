{% extends 'base.html.twig' %}

{% block title %}Mon Panier{% endblock %}

{% block body %}
    <h1>Mon Panier</h1>
    <table>
        <thead>
            <tr>
                <th>Nom</th>
                <th>Description</th>
                <th>Prix</th>
                <th>Quantite</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for produit in dataPanier %}
                <tr>
                    <td>{{ produit.produit.nom }}</td>
        <td>{{ produit.produit.description }}</td>
        <td>{{ produit.produit.prix }} €</td>
        <td>{{ produit.quantite }}</td>
<td>
    <a href="{{ path('panier_ajouter-via-panier', { id: produit.produit.id }) }}">Augmenter</a>
    <a href="{{ path('panier_reduire', { id: produit.produit.id }) }}">Réduire</a>
</td>


        <td>
                        <a href="{{ path('panier_supprimer', { id: produit.produit.id }) }}">Supprimer</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
        <button type="button" onclick="window.location.href='{{ path('produit_catalogue') }}'">Catalogue</button>

    <button type="button" onclick="window.location.href='{{ path('client_acceuil') }}'">Accueil</button>

{% endblock %}

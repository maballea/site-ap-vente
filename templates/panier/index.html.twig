{% extends 'base.html.twig' %}

{% block title %}Mon Panier{% endblock %}

{% block body %}

{% if not app.user %}
    <p><a href="{{ path('app_login') }}">Se connecter</a> pour ajouter des produits à votre panier.</p>
{% elseif not is_granted('ROLE_CLIENT') %}
    <h1>{{ message }}</h1>
    <p><a href="{{ path('app_login') }}">Se connecter</a> pour ajouter des produits à votre panier.</p>
{% else %}

    <h1>Mon Panier</h1>

    <form method="GET" action="{{ path('panier') }}">
        <label for="tri">Trier par :</label>
        <select name="tri" id="tri" onchange="this.form.submit()">
            <option value="nom" {% if tri == 'nom' %}selected{% endif %}>Nom</option>
            <option value="prix" {% if tri == 'prix' %}selected{% endif %}>Prix</option>
        </select>
    </form>

    {% if dataPanier is empty %}
        <p>Votre panier est vide.</p>
    {% else %}
        <table>
            <thead>
                <tr>
                    <th>Nom</th>
                    <th>Description</th>
                    <th>Quantite</th>
                    <th>Prix Unitaire</th>
                    <th>Prix Total</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for produit in dataPanier %}
                    <tr>
                        <td>{{ produit.produit.nom }}</td>
                        <td>{{ produit.produit.description }}</td>
                        <td>{{ produit.quantite }}</td>
                        <td>{{ produit.produit.prix }} €</td>
                        <td>{{ produit.produit.prix * produit.quantite }} €</td> <!-- Calcul du prix total -->
                        <td>
                            <form action="{{ path('panier_ajouter', { id: produit.produit.id }) }}" method="post" class="d-flex align-items-center">
                                <input type="number" name="quantite" min="1" value="0" class="form-control me-2" style="width: 80px;">
                                <button type="submit" class="btn btn-primary btn-sm">Ajouter</button>
                            </form>
                            <form action="{{ path('panier_reduire', { id: produit.produit.id }) }}" method="post" class="d-flex align-items-center">
                                <input type="number" name="quantite" min="1" value="0" class="form-control me-2" style="width: 80px;">
                                <button type="submit" class="btn btn-warning btn-sm">Réduire</button>
                            </form>
                        </td>
                        <td>
                            <form action="{{ path('panier_supprimer', { id: produit.produit.id }) }}" method="post">
                                <button type="submit">Supprimer un produit</button>
                            </form>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

        <form action="{{ path('commande_creer') }}" method="post">
            <button type="submit" class="btn btn-success mt-3">Créer une commande</button>
        </form>


    {% endif %}
    
    <button type="button" onclick="window.location.href='{{ path('produit_catalogue') }}'">Catalogue</button>
    <button type="button" onclick="window.location.href='{{ path('client_acceuil') }}'">Accueil</button>

{% endif %}

{% endblock %}

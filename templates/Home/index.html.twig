{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
    <h1 class="text-center mb-4">Produits Disponibles</h1>
    <div class="row">
        {% for produit in produits %}
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm h-100">
                    <img src="{{ produit.image }}" alt="{{ produit.nom }}" class="card-img-top">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">{{ produit.nom }}</h5>
                        <p class="card-text">{{ produit.description }}</p>
                        <p class="card-text"><strong>Prix :</strong> {{ produit.prix | number_format(2, ',', ' ') }} â‚¬</p>
                        <a href="#" class="btn btn-primary mt-auto">Commander</a>
                    </div>
                </div>
            </div>
        {% else %}
            <p class="text-center">Aucun produit disponible pour le moment.</p>
        {% endfor %}
    </div>
{% endblock %}